<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_kosong"
    tools:context=".RegisterActivity">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/header_register"
            android:adjustViewBounds="true"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:background="@drawable/register_box1"
            android:hint="@string/nama_lengkap"
            android:paddingLeft="50dp"
            android:textSize="20sp"
            android:inputType="text"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:background="@drawable/register_box2"
            android:hint="Email"
            android:paddingLeft="50dp"
            android:textSize="20sp"
            android:inputType="text"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:background="@drawable/register_box3"
            android:hint="@string/no_hp"
            android:paddingLeft="50dp"
            android:textSize="20sp"
            android:inputType="text"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:background="@drawable/register_box4"
            android:hint="@string/umur"
            android:paddingLeft="50dp"
            android:textSize="20sp"
            android:inputType="number"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:background="@drawable/register_box5"
            android:hint="Kata Sandi"
            android:paddingLeft="50dp"
            android:textSize="20sp"
            android:inputType="textPassword"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/register_kartu_tanda"/>
        <ImageButton
            android:id="@+id/btn_daftarkan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_daftar"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"/>
    </LinearLayout>
</ScrollView>
</RelativeLayout>